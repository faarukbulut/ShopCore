@model Cart
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Shopping Cart</h1>
<hr>

@if (Model.CartItems.Count() == 0)
{
    <div class="alert alert-warning">
        <p>No Product</p>
    </div>    
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="text-left">
                <h4>Cart Items</h4>
            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td><img src="~/img/products/@item.Product.ImageUrl" width="80" /></td>
                            <td>@item.Product.Name</td>
                            <td>@item.Product.Price</td>
                            <td>@item.Quantity</td>
                            <td>₺@(item.Product.Price * item.Quantity)</td>
                            <td>
                                <form method="post" asp-controller="Cart" asp-action="DeleteFromCart" asp-route-productID="@item.ProductID">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-times fa-fw"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <div class="col-md-4">
            <div class="text-left">
                <h4>Cart Summary</h4>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Cart Total</th>
                        <td>₺@(Model.CartItems.Sum(x => x.Product.Price * x.Quantity))</td>
                    </tr>
                    <tr>
                        <th>Shipping</th>
                        <td>Free</td>
                    </tr>
                    <tr>
                        <th>TAX</th>
                        <td>%0</td>
                    </tr>
                    <tr>
                        <th>Order Total</th>
                        <td>₺@(Model.CartItems.Sum(x => x.Product.Price * x.Quantity))</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a href="/Default" class="btn btn-dark"><i class="fa fa-arrow-circle-left fa-fw"></i> Continue Shoppig</a>
                <a href="/Checkout" class="btn btn-primary"><i class="fa fa-arrow-circle-right fa-fw"></i> Checkout</a>
            </div>
        </div>
    </div>
}
