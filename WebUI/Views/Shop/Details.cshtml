@model Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        <img src="~/img/products/@Model.ImageUrl" alt="@Model.Name" class="img-fluid"/>
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">@Model.Name</h1>
        <hr />
        <a href="#" class="btn btn-link p-0 mb-3">@Model.Category.Name</a>
        <div class="mb-3">
            <h4 class="text-primary mb-3">₺@Model.Price</h4>

            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                <input type="hidden" name="productID" value="@Model.ProductID" />
                <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:150px" />
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-cart-plus"></i> Add To Cart</button>
                </div>
            </form>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p class="p-3">@Model.Description</p>
    </div>
</div>
