@model List<Product>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("_CategoryListViewComponentPartial")
    </div>
    <div class="col-md-9">

        <div class="row">
            @foreach (var product in Model)
            {
                <partial name="_Product" for="@product" />
            }
        </div>
    </div>
</div>