@model Category
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Category</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form method="post" asp-controller="Admin" asp-action="CreateCategory">
            @Html.AntiForgeryToken()

            <div class="form-group-row">
                <label class="col-md-2 col-form-label">Category Name</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" class="form-control" required />
                </div>
            </div>

            <div class="form-group-row">
                <div class="col-md-2 col-form-label">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>

        </form>
    </div>
</div>