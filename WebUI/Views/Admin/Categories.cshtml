@model List<Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h4>No Categories</h4>
    </div>
}
else
{
    @if(TempData["CannotDeleteCategory"] != null){
        <div class="alert alert-warning">
            <h4>@TempData["CannotDeleteCategory"]</h4>
        </div>
    }

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-primary btn-sm mr-2" href="/Admin/UpdateCategory/@item.CategoryID">Edit</a>
                        <a class="btn btn-danger btn-sm mr-2" href="/Admin/DeleteCategory/@item.CategoryID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

