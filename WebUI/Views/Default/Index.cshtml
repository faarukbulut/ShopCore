@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("_CategoryListViewComponentPartial", new {id = 0})
    </div>
    <div class="col-md-9">
        <partial name="_Slider" />

        <div class="row">
            @Html.AntiForgeryToken()
            @foreach (var product in Model)
            {
                <partial name="_Product" for="@product" />
            }
        </div>
    </div>
</div>

